<nav class="navbar navbar-expand navbar-light bg-primary">
    <h2 class='navbar-brand text-light display-4'>Burgers!</h2>
</nav>

<div class="container-fluid">
    <div class="row justify-content-sm-center">
        <div class="col col-sm-8">
            <div class="jumbotron">
                <h4 class='display-4'>Ready to be Devoured</h4>

                <ul class="lead">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
                <hr class="my-4">
                <h4 class='display-4'>Devoured</h4>

                <ul class="lead">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
                <hr class="my-4">

                <div class="row">
                    <div class="col col-sm-7">
                        <form>
                            <h2 class='display-4'>Add a New Burger!</h2>
                            <input class="form-control" id='new-burger' type="text" placeholder="New Burger!">
                            <button type="submit" class="btn btn-lg btn-primary" id='burger-submit'>Submit!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>